<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
 android:layout_margin="4dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2sp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_outline_black_48dp" />

        <TextView
            android:id="@+id/card_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3sp"
            android:gravity="center"
            android:text="Alon Ben Dov"
            android:textColor="#002e70"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="12345678910"
            android:textColor="#004da6"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>